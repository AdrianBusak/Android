<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.F1APP">

        <!-- Splash kao launcher -->
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- HostActivity s drawerom i navigationom -->
        <activity
            android:name=".HostActivity"
            android:exported="false" />

        <!-- Pager za detalje vozača -->
        <activity
            android:name=".DriverPagerActivity"
            android:exported="false" />

        <!-- ContentProvider za drivere -->
        <provider
            android:name=".provider.F1Provider"
            android:authorities="hr.algebra.f1.provider"
            android:enabled="true"
            android:exported="false" />

        <!-- BroadcastReceiver koji se pali kad Worker završi import -->
        <receiver
            android:name=".F1Receiver"
            android:exported="false" />

    </application>

</manifest>
